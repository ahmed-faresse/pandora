<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/relative"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Account"
        android:id="@+id/textView2"
        android:textSize="20dip"
        android:gravity="center"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/switch_localisation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localisation On"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-5dp"
        android:id="@+id/text_localisation"
        android:textSize="15dip"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="29dp"
 />


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dip"
        android:gravity="center"
        >

        <!--User name-->
        <EditText
            android:id="@+id/name"
            android:hint="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <!--User Age-->
        <EditText
            android:id="@+id/age"
            android:hint="Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--User Profession-->
        <EditText
            android:id="@+id/profession"
            android:hint="Profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <!--User Hobbies-->
        <EditText
            android:id="@+id/hobbies"
            android:hint="Hobbies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--User Description-->
        <EditText
            android:id="@+id/description"
            android:hint="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>

    <Button
        android:layout_marginTop="20dp"
        android:layout_below="@+id/scroll"
        android:id="@+id/btnsave"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:background="#11B817"/>
    <Button
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnsave"
        android:id="@+id/backmap"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="Back to the map"
        android:textColor="#FFFFFF"
        android:background="#3085FF"/>
</RelativeLayout>